<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'objective-picker-window-title'}"
                      MinSize="300 250"
                      SetSize="600 370">
    <PanelContainer>
        <BoxContainer Orientation="Vertical" VerticalExpand="True">
            <PanelContainer StyleClasses="BackgroundDark" VerticalExpand="True" Margin="10 5 5 0">
                <ScrollContainer VerticalExpand="True" HScrollEnabled="False">
                    <BoxContainer Name="ObjectiveList" Orientation="Vertical" VerticalExpand="True"/>
                </ScrollContainer>
            </PanelContainer>
            <BoxContainer Orientation="Vertical" VerticalAlignment="Bottom" Margin="5">
                <RichTextLabel Name="SelectionTip" HorizontalAlignment="Center" Text="{Loc 'objective-picker-window-select-tip'}"/>
                <controls:ConfirmButton Name="SubmitButton" Margin="5" Text="{Loc 'objective-picker-window-submit'}"/>
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</controls:FancyWindow>
